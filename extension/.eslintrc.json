{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "@typescript-eslint/naming-convention": [
      "warn",
      // Default: require camelCase for most things
      {
        "selector": "default",
        "format": ["camelCase"]
      },
      // Variables can be camelCase or UPPER_CASE (for constants), allow leading underscore for unused
      {
        "selector": "variable",
        "format": ["camelCase", "UPPER_CASE", "PascalCase"],
        "leadingUnderscore": "allow"
      },
      // Parameters can be camelCase or start with underscore (unused)
      {
        "selector": "parameter",
        "format": ["camelCase"],
        "leadingUnderscore": "allow"
      },
      // Class properties can be camelCase or UPPER_CASE (for static readonly), allow leading underscore for private
      {
        "selector": "classProperty",
        "format": ["camelCase", "UPPER_CASE"],
        "leadingUnderscore": "allow"
      },
      // Object literal properties: allow snake_case for bridge JSON contracts
      {
        "selector": "objectLiteralProperty",
        "format": null
      },
      // Type properties: allow snake_case for API boundary types
      {
        "selector": "typeProperty",
        "format": null
      },
      // Enum members: allow PascalCase and UPPER_CASE
      {
        "selector": "enumMember",
        "format": ["PascalCase", "UPPER_CASE"]
      },
      // Types and interfaces: require PascalCase
      {
        "selector": "typeLike",
        "format": ["PascalCase"]
      },
      // Functions and methods: require camelCase
      {
        "selector": ["function", "method"],
        "format": ["camelCase"]
      },
      // Imports: allow various formats for third-party modules
      {
        "selector": "import",
        "format": null
      }
    ],
    "@typescript-eslint/semi": "warn",
    "curly": "warn",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "semi": "off",
    "no-useless-escape": "warn"
  },
  "overrides": [
    {
      "files": ["src/test/**/*.ts", "**/*.test.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/ban-types": "off",
        "no-empty": "off"
      }
    }
  ],
  "ignorePatterns": ["out", "dist", "**/*.d.ts", "node_modules", ".vscode-test"]
}
